@page
@model frontend.Pages.RecordTypes.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>Record types</h4>
<hr />
<p>
    <a asp-page="Create">Create new record type</a>
</p>
@if (Model.RecordTypes.Count == 0) {
    <p>The list is empty..</p>
} else {
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RecordTypes[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecordTypes[0].Icon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RecordTypes[0].Color)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RecordTypes) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Icon)
                    </td>
                    <td>
                        <span style="color:@item.Color;">
                            @Html.DisplayFor(modelItem => item.Color)
                        </span>
                    </td>
                    <td>
                        <a asp-page="Details" asp-route-id="@item.RecordTypeId">Details</a> |
                        <a asp-page="Edit" asp-route-id="@item.RecordTypeId">Edit</a> |
                        <a asp-page="Delete" asp-route-id="@item.RecordTypeId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
